<div class="container mx-auto px-4 max-w-md">
  <h2 class="text-2xl font-semibold mb-4">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, 'ユーザー名', class: 'block text-gray-700 font-semibold' %>
      <%= f.text_field :name, autofocus: true, class: 'input input-bordered w-full' %>
    </div>

    <div class="field">
      <%= f.label :email, class: 'block text-gray-700 font-semibold' %>
      <%= f.email_field :email, autocomplete: "email", class: 'input input-bordered w-full' %>
    </div>

    <div class="field">
      <%= f.label :password, 'パスワード', class: 'block text-gray-700 font-semibold' %>
      <% if @minimum_password_length %>
      <em class="text-gray-600">( <%= @minimum_password_length %> 文字以上にしてください)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'input input-bordered w-full' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'パスワード再入力', class: 'block text-gray-700 font-semibold' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input input-bordered w-full' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'bg-gray-600 text-white font-semibold px-4 py-2 rounded hover:bg-gray-700 transition-colors duration-300 ease-in-out' %>
    </div>
  <% end %>

  <br>

  <%= render "devise/shared/links" %>
</div>
