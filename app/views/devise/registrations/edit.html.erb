<h2 class="text-2xl font-semibold mb-4">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'space-y-4' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, class: 'block text-gray-700 font-semibold' %>
    <%= f.text_field :name, autofocus: true, class: 'input input-bordered w-full' %>
  </div>

  <div class="field">
    <%= f.label :email, class: 'block text-gray-700 font-semibold' %>
    <%= f.email_field :email, autocomplete: "email", class: 'input input-bordered w-full' %>
  </div>

  <div class="field">
    <%= f.label :profile_url, class: 'block text-gray-700 font-semibold' %>
    <%= f.text_field :profile_url, class: 'input input-bordered w-full' %>
  </div>

  <div class="field">
    <%= f.label :avatar, class: 'block text-gray-700 font-semibold' %>
    <%= f.file_field :avatar, class: 'block mt-2' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="text-gray-600">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: 'block text-gray-700 font-semibold' %> <i class="text-gray-600">(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: 'input input-bordered w-full mt-2' %>
    <% if @minimum_password_length %>
      <em class="text-gray-600"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'block text-gray-700 font-semibold' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input input-bordered w-full mt-2' %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: 'block text-gray-700 font-semibold' %> <i class="text-gray-600">(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'input input-bordered w-full mt-2' %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to "Back", :back, class: 'btn btn-link mt-4' %>
