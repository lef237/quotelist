<div class="container mx-auto max-w-md px-4">
  <h2 class="text-2xl font-semibold mb-4">パスワードを忘れた場合</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-4' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: 'block text-gray-700 font-semibold' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input input-bordered w-full' %>
    </div>

    <div class="actions">
      <%= f.submit "パスワードの再設定方法をメールでお送りします", class: 'bg-gray-600 text-white font-semibold px-4 py-2 rounded hover:bg-gray-700 transition-colors duration-300 ease-in-out' %>
    </div>
  <% end %>

  <br>

  <%= render "devise/shared/links" %>
</div>

