<div class="container mx-auto px-4 max-w-md">
  <h2 class="text-2xl font-semibold mb-4 m-3">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'block text-gray-700 font-semibold' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-white border border-gray-300 w-full p-2' %>
    </div>

    <div class="field">
      <%= f.label :password, 'パスワード', class: 'block text-gray-700 font-semibold' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'bg-white border border-gray-300 w-full p-2' %>
    </div>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "パスワードを忘れた場合", new_password_path(resource_name) %><br />
    <% end %>

    <% if devise_mapping.rememberable? %>
      <div class="field flex items-center">
        <%= f.check_box :remember_me, class: 'mr-2' %>
        <%= f.label :remember_me, 'ログイン状態を保存する', class: 'text-gray-700 font-semibold' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログインする", class: 'bg-gray-600 text-white font-semibold px-4 py-2 rounded hover:bg-gray-700 transition-colors duration-300 ease-in-out' %>
    </div>
  <% end %>

  <br />

  <%= render "devise/shared/links" %>
</div>
