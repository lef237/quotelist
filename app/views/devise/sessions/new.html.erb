<div class="container mx-auto px-4 max-w-md">
  <h2 class="text-2xl font-semibold mb-4">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'block text-gray-700 font-semibold' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input input-bordered w-full' %>
    </div>

    <div class="field">
      <%= f.label :password, 'パスワード', class: 'block text-gray-700 font-semibold' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'input input-bordered w-full' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field flex items-center">
        <%= f.check_box :remember_me, class: 'mr-2' %>
        <%= f.label :remember_me, 'ログイン状態を保存する', class: 'text-gray-700 font-semibold' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'bg-gray-600 text-white font-semibold px-4 py-2 rounded hover:bg-gray-700 transition-colors duration-300 ease-in-out' %>
    </div>
  <% end %>

  <br />

  <%= render "devise/shared/links" %>
</div>


